@model SIGAI.Models.ViewModels.LoginViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Acceso al Sistema - SIGAI</title>

    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">

    <!-- SweetAlert2 -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11.10.1/dist/sweetalert2.min.css">

    <!-- CSS personalizado -->
    <link rel="stylesheet" href="~/css/login.css">

    <!-- Animate.css para animaciones (opcional) -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
</head>
<body>
    <canvas id="backgroundCanvas"></canvas>

    <div class="login-container">
        <div class="login-card animate__animated animate__fadeInDown">
            <div class="login-header text-center">
                <h1 class="login-title">SIGAI</h1>
                <p class="login-subtitle">Sistema Integrado de Gestión Académica Institucional</p>
            </div>

            <form asp-action="Login" method="post" novalidate>
                <div class="form-group mb-3">
                    <label asp-for="DNI" class="form-label">DOCUMENTO DE IDENTIDAD</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-person-badge"></i></span>
                        <input asp-for="DNI" class="form-control" placeholder="Ingrese su número de documento"
                               required pattern="[0-9]{8}" inputmode="numeric" autocomplete="username"
                               value="@Model.DNI" />
                    </div>
                    <span asp-validation-for="DNI" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Password" class="form-label">CONTRASEÑA</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-lock"></i></span>
                        <input asp-for="Password" type="password" class="form-control"
                               placeholder="Ingrese su contraseña" required autocomplete="current-password" />
                    </div>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-check mb-3">
                    <input asp-for="RememberMe" class="form-check-input" id="rememberMe" />
                    <label asp-for="RememberMe" class="form-check-label" for="rememberMe">Mantener sesión iniciada</label>
                </div>

                <button type="submit" class="login-btn mb-3 btn btn-primary w-100 animate__animated animate__fadeInUp">
                    INGRESAR AL SISTEMA
                </button>

                <div class="text-center mb-3">
                    <a asp-action="Recuperar" asp-controller="Auth" class="login-link">
                        <i class="bi bi-question-circle"></i> ¿Olvidó su contraseña?
                    </a>
                </div>
            </form>

            <!-- Sección registro estudiantes -->
            <div class="register-section text-center mt-4 pt-3 border-top">
                <p class="mb-2">¿No tienes cuenta?</p>
                <a asp-action="RegistroEstudiante" asp-controller="Auth" class="btn btn-outline-primary btn-sm">
                    <i class="bi bi-person-plus"></i> Solicita tu alta como estudiante
                </a>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <!-- Si usas tu background.js, mantenelo -->
    <script src="~/js/background.js"></script>

    @* Mostrar error sólo si TempData["LoginError"] es true *@
    @if (TempData["LoginError"] as bool? == true)
    {
        <script>
            Swal.fire({
                icon: 'error',
                title: 'Credenciales incorrectas',
                text: 'El documento o contraseña ingresados no son válidos.',
                confirmButtonText: 'Entendido',
                background: 'rgba(237, 242, 247, 0.98)',
                color: '#2d3748'
            });
        </script>
    }

    <partial name="_ValidationScriptsPartial" />
</body>
</html>
