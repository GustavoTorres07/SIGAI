@model SIGAI.Models.ViewModels.DashboardSuperAdminViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard Super Admin</title>

    <!-- Libs -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.8/index.global.min.css" rel="stylesheet">
    <link href="~/css/dashboard.css" rel="stylesheet" asp-append-version="true">
</head>
<body>
    <!-- Sidebar Completo -->
    <nav class="sidebar">
        <div class="sidebar-header">
            <div class="admin-profile">
                <img id="profileImg" src="https://i.pravatar.cc/150?img=12" alt="Perfil" class="profile-img" title="Cambiar foto" />
                <div class="admin-info">
                    <h5>Gustavo Torres</h5>
                    <p>Super Admin</p>
                </div>
            </div>
        </div>

        <div class="sidebar-nav">
            <div class="nav-section">
                <div class="nav-section-title">General</div>
                <div class="nav-item">
                    <a href="#" class="nav-link active" data-section="dashboard">
                        <i class="fas fa-tachometer-alt"></i> Dashboard
                    </a>
                </div>
            </div>

            <div class="nav-section">
                <div class="nav-section-title">Gestión</div>
                <div class="nav-item">
                    <a href="#" class="nav-link" data-section="users">
                        <i class="fas fa-users"></i> Usuarios
                    </a>
                </div>
                <div class="nav-item">
                    <a href="#" class="nav-link" data-section="student-requests">
                        <i class="fas fa-user-plus"></i> Solicitudes Estudiantes
                        <span id="requestCount" class="notification-badge">@(Model.SolicitudesPendientes?.Count ?? 0)</span>
                    </a>
                </div>
                <div class="nav-item">
                    <a href="#" class="nav-link" data-section="roles">
                        <i class="fas fa-user-shield"></i> Roles
                    </a>
                </div>
                <div class="nav-item">
                    <a href="#" class="nav-link" data-section="careers">
                        <i class="fas fa-graduation-cap"></i> Carreras
                    </a>
                </div>
                <div class="nav-item">
                    <a href="#" class="nav-link" data-section="subjects">
                        <i class="fas fa-book"></i> Materias
                    </a>
                </div>
            </div>

            <div class="nav-section">
                <div class="nav-section-title">Soporte</div>
                <div class="nav-item">
                    <a href="#" class="nav-link" data-section="support">
                        <i class="fas fa-life-ring"></i> Tickets Soporte
                        <span id="notificationCount" class="notification-badge">@Model.TicketsPendientes</span>
                    </a>
                </div>
                <div class="nav-item">
                    <a href="#" class="nav-link" data-section="audit">
                        <i class="fas fa-file-alt"></i> Auditoría
                    </a>
                </div>
            </div>

            <div class="nav-section">
                <div class="nav-item">
                    <!-- Enlace visible (usa # para evitar navegación) -->
                    <a href="#" class="nav-link" id="logoutLink">
                        <i class="fas fa-sign-out-alt"></i> Cerrar Sesión
                    </a>
                    <form id="logoutForm" asp-controller="Auth" asp-action="Logout" method="post" style="display: none;">
                        @Html.AntiForgeryToken() <!-- Genera el token de seguridad -->
                    </form>
                </div>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="main-content">
        <!-- Alerta de sistema -->
        <div class="alert system-alerts" id="systemAlerts">
            <div class="d-flex align-items-center">
                <i class="fas fa-exclamation-triangle alert-icon"></i>
                <div><strong>Mantenimiento Programado:</strong> 15/07/2025 de 02:00 a 04:00 hs.</div>
            </div>
        </div>

        <!-- Header -->
        <div class="header-section">
            <div class="d-flex justify-content-between align-items-center">
                <div class="welcome-text">
                    <h2>Bienvenido, Super Admin</h2>
                    <p>
                        Panel de control del sistema educativo – 
                        <span id="currentDate">@DateTime.Now.ToString("dd/MM/yyyy")</span>
                    </p>
                </div>
                <button class="btn btn-primary" onclick="refreshDashboard()">
                    <i class="fas fa-sync-alt me-2"></i> Actualizar Datos
                </button>
            </div>
        </div>

        <!-- Loading spinner -->
        <div class="loading-spinner" id="loadingSpinner">
            <div class="spinner-border" role="status"><span class="visually-hidden">Cargando…</span></div>
            <p class="mt-2">Cargando datos del sistema…</p>
        </div>

        <!-- Dashboard Content -->
        <div id="dashboardContent">
            <!-- Estadísticas -->
            <div class="stats-grid">
                <div class="stat-card">
                    <div class="stat-icon" style="background:rgba(255,107,53,.1);color:var(--primary-orange);">
                        <i class="fas fa-users"></i>
                    </div>
                    <div class="stat-number" id="totalUsers">@Model.TotalUsuarios</div>
                    <div class="stat-label">Usuarios Totales</div>
                </div>

                <div class="stat-card">
                    <div class="stat-icon" style="background:rgba(46,134,171,.1);color:var(--primary-blue);">
                        <i class="fas fa-user-graduate"></i>
                    </div>
                    <div class="stat-number" id="totalStudents">@Model.TotalEstudiantes</div>
                    <div class="stat-label">Estudiantes Activos</div>
                </div>

                <div class="stat-card">
                    <div class="stat-icon" style="background:rgba(162,59,114,.1);color:var(--secondary-blue);">
                        <i class="fas fa-chalkboard-teacher"></i>
                    </div>
                    <div class="stat-number" id="totalTeachers">@Model.TotalDocentes</div>
                    <div class="stat-label">Docentes</div>
                </div>

                <div class="stat-card">
                    <div class="stat-icon" style="background:rgba(255,107,53,.1);color:var(--primary-orange);">
                        <i class="fas fa-ticket-alt"></i>
                    </div>
                    <div class="stat-number" id="pendingTickets">@Model.TicketsPendientes</div>
                    <div class="stat-label">Tickets Pendientes</div>
                </div>
            </div>

            <!-- Grids -->
            <div class="dashboard-grid">
                <!-- Actividad reciente -->
                <div class="dashboard-card">
                    <div class="card-header">
                        <i class="fas fa-clock"></i><h5>Actividad Reciente</h5>
                    </div>
                    <div class="card-body" id="recentActivity">
                        @if (Model.ActividadReciente?.Any() == true)
                        {
                            @foreach (var a in Model.ActividadReciente)
                            {
                                <div class="activity-item">
                                    <div class="activity-icon" style="background:var(--primary-blue)">
                                        <i class="fas fa-angle-right"></i>
                                    </div>
                                    <div class="activity-content">
                                        <div class="activity-title">@a</div>
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <p class="text-muted">No hay actividad reciente.</p>
                        }
                    </div>
                </div>

                <!-- Solicitudes -->
                <div class="dashboard-card">
                    <div class="card-header">
                        <i class="fas fa-user-plus"></i><h5>Solicitudes de Estudiantes <span class="badge bg-primary ms-2">@(Model.SolicitudesPendientes?.Count ?? 0)</span></h5>
                    </div>
                    <div class="card-body pending-requests" id="pendingRequests">
                        @if (Model.SolicitudesPendientes?.Any() == true)
                        {
                            @foreach (var s in Model.SolicitudesPendientes)
                            {
                                <div class="request-item mb-3">
                                    <div class="request-header">
                                        <div>
                                            <div class="request-name">@s</div>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <p class="text-muted">No hay solicitudes pendientes.</p>
                        }
                    </div>
                </div>
            </div>

            <!-- Calendario -->
            <div class="calendar-container">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h5 class="mb-0"><i class="fas fa-calendar-alt me-2"></i>Calendario del Sistema</h5>
                    <button class="btn btn-outline-primary btn-sm" onclick="addSystemEvent()">
                        <i class="fas fa-plus me-1"></i>Agregar Evento
                    </button>
                </div>
                <div id="calendar"></div>
            </div>
        </div>
    </div>
    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.8/index.global.min.js"></script>
    <script src="~/js/dashboard.js" asp-append-version="true"></script>
</body>
</html>