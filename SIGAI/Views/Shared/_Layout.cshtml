@using System.Security.Claims
@{
    string nombreCompleto = User.FindFirst("FullName")?.Value ?? User.Identity?.Name ?? "Usuario";
    string fotoPerfil = User.FindFirst("FotoPerfil")?.Value ?? Url.Content("~/img/default-profile.png");
    string rolUsuario = User.FindFirst(ClaimTypes.Role)?.Value ?? "Sin rol";
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - SIGAI</title>

    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet" />
    <!-- Sidebar custom CSS -->
    <link href="~/css/barramenu.css" rel="stylesheet" />

    @RenderSection("Styles", required: false)
</head>
<body>
    <div class="d-flex" id="wrapper">
        <!-- Sidebar -->
        <div class="bg-gradient sidebar" id="sidebar">
            <!-- Usuario - ARRIBA -->
            <div class="user-profile text-center px-2">
                <img src="@fotoPerfil" alt="Foto de perfil" class="rounded-circle mb-2 user-img" />
                <div class="fw-bold d-none d-md-block text-white text-truncate" title="@nombreCompleto">@nombreCompleto</div>
                <small class="text-white-50 d-none d-md-block text-truncate" title="@rolUsuario">@rolUsuario</small>
            </div>

            <!-- Header del sidebar -->
            <div class="sidebar-header text-center py-2">
                <h4 class="text-white mb-0">SIGAI</h4>
            </div>

            <!-- Navegación por categorías -->
            <div class="nav flex-column">
                <!-- PRINCIPAL -->
                <div class="nav-category">
                    <i class="bi bi-house"></i>
                    <span>Principal</span>
                </div>
                <div class="nav-category-items">
                    <div class="nav-item">
                        <a class="nav-link active" href="@Url.Action("Index", "Home")">
                            <i class="bi bi-house-door me-2"></i><span>Inicio</span>
                        </a>
                    </div>
                </div>

                <div class="nav-category-separator"></div>

                <!-- ACADÉMICO -->
                <div class="nav-category">
                    <i class="bi bi-mortarboard"></i>
                    <span>Académico</span>
                </div>
                <div class="nav-category-items">
                    <div class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "Calendario")">
                            <i class="bi bi-calendar3 me-2"></i><span>Calendario</span>
                        </a>
                    </div>
                    <div class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "Materias")">
                            <i class="bi bi-journal-bookmark me-2"></i><span>Materias</span>
                        </a>
                    </div>
                </div>

                <div class="nav-category-separator"></div>

                <!-- ADMINISTRACIÓN -->
                <div class="nav-category">
                    <i class="bi bi-gear"></i>
                    <span>Administración</span>
                </div>
                <div class="nav-category-items">
                    <div class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "Usuarios")">
                            <i class="bi bi-people me-2"></i><span>Usuarios</span>
                        </a>
                    </div>
                </div>

                <div class="nav-category-separator"></div>

                <!-- CUENTA -->
                <div class="nav-category">
                    <i class="bi bi-person-circle"></i>
                    <span>Cuenta</span>
                </div>
                <div class="nav-category-items">
                    <div class="nav-item">
                        <form id="logoutForm" asp-controller="Auth" asp-action="Logout" method="post" class="d-inline w-100">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-link nav-link text-white p-0 w-100 text-start">
                                <i class="bi bi-box-arrow-right me-2"></i><span>Cerrar sesión</span>
                            </button>
                        </form>
                    </div>
                </div>
            </div>

            <!-- Toggle - se mantiene abajo -->
            <div class="toggle-container">
                <button class="btn btn-outline-light btn-sm" id="toggleSidebar" aria-label="Colapsar menú">
                    <i class="bi bi-chevron-left"></i>
                </button>
            </div>
        </div>

        <!-- Page Content -->
        <div id="page-content-wrapper" class="flex-grow-1">
            <nav class="navbar navbar-expand navbar-light bg-light border-bottom">
                <div class="container-fluid">
                    <div class="d-flex align-items-center">
                        <span class="navbar-brand mb-0 h1">Panel de Control</span>
                        <nav aria-label="breadcrumb" class="ms-3">
                            <ol class="breadcrumb mb-0">
                                @{
                                    string controllerName = ViewContext.RouteData.Values["controller"]?.ToString() ?? "";
                                    string actionName = ViewContext.RouteData.Values["action"]?.ToString() ?? "";
                                    string categoryName = "";
                                    string sectionName = "";

                                    // Mapear controller a categoría y acción a sección
                                    switch (controllerName.ToLower())
                                    {
                                        case "home":
                                            categoryName = "Principal";
                                            sectionName = actionName.ToLower() == "index" ? "Inicio" : actionName;
                                            break;
                                        case "calendario":
                                            categoryName = "Académico";
                                            sectionName = "Calendario";
                                            break;
                                        case "materias":
                                            categoryName = "Académico";
                                            sectionName = "Materias";
                                            break;
                                        case "usuarios":
                                            categoryName = "Administración";
                                            sectionName = "Usuarios";
                                            break;
                                        case "auth":
                                            categoryName = "Sistema";
                                            sectionName = actionName == "Login" ? "Iniciar Sesión" : "Autenticación";
                                            break;
                                        default:
                                            categoryName = "Sistema";
                                            sectionName = controllerName;
                                            break;
                                    }
                                }

                                <li class="breadcrumb-item">
                                    <span class="text-muted">@categoryName</span>
                                </li>
                                <li class="breadcrumb-item active fw-medium" aria-current="page">
                                    @sectionName
                                </li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </nav>

            <main class="container-fluid py-4">
                @RenderBody()
            </main>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/barramenu.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
